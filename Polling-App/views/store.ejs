<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center">
        <i class="fas fa-address-card"></i>
        Employee Zone
      </h1>
      <form action="/store" method="POST">
        <div class="form-group">
          <label for="empid">Emp ID</label>
          <input
            type="text",
            id="empid",
            name="empid",
            class="form-control"
          >
        </div>
        <div class="form-group">
          <label for="empname">Name</label>
          <input
            type="text",
            id="empname",
            name="empname",
            class="form-control"
          >
        </div>
        <div class="form-group">
          <label for="empmail">MailID</label>
          <input
            type="text",
            id="empmail",
            name="empmail",
            class="form-control"
          >
        </div>
        <label for="gender">Gender</label><br>
        <div class="form-check">
        <input type="radio" id="male" name="gender" value="male" class="form-check-input">
        <label for="male" class="form-check-label">Male</label><br>
        <input type="radio" id="female" name="gender" value="female" class="form-check-input">
        <label for="female" class="form-check-label">Female</label><br>
        <input type="radio" id="other" name="gender" value="other" class="form-check-input">
        <label for="other" class="form-check-label">Other</label>
        </div>
        <br>
        <div class="form-group">
          <label for="salary">Salary</label>
          <input
            type="String",
            id="empsal",
            name="salary",
            class="form-control"
          >
        </div>
        <label for="vote">Votes For:</label><br>
        <div class="form-check">
          <label for="vote">Votes For:</label><br>
          <input type="radio" id="Realme" name="vote" value="Realme" class="form-check-input">
          <label class="form-check-label" for="realmevote">Realme</label><br>
          <input type="radio" id="Redmi" name="vote" value="Redmi" class="form-check-input">
          <label class="form-check-label" for="redmivote">Redmi</label><br>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">
          Submit
        </button>
      </form>
      <a href="/results" class="mt-4 lead">Click here to see the Poll Results</a>
    </div>

  </div>
</div>